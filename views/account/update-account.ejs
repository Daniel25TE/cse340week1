<% if (title) { %>
    <h1>
        <%= title %>
    </h1>
    <% } else { res.redirect('/') } %>

        <% if (message) { %>
            <%- messages() %>
                <% if (errors) { %>
                    <ul class="notice">
                        <% errors.array().forEach(error=> { %>
                            <li>
                                <%= error.msg %>
                            </li>
                            <% }) %>
                    </ul>
                    <% } %>
                        <% } %>

<section>
    <h2>Update Account Information</h2>
    <form method="post" action="/account/update">
        <input type="hidden" name="inv_id" <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
            <% } %>>

        <label for="account_firstname">First Name:</label>
        <input type="text" id="account_firstname" name="account_firstname" value="<%= accountData.account_firstname %>"
            required>

        <label for="account_lastname">Last Name:</label>
        <input type="text" id="account_lastname" name="account_lastname" value="<%= accountData.account_lastname %>"
            required>

        <label for="account_email">Email:</label>
        <input type="email" id="account_email" name="account_email" value="<%= accountData.account_email %>" required>

        <button type="submit">Update Account</button>
    </form>
</section>

<hr>

<section>
    <h2>Change Password</h2>

    <form method="post" action="/account/update-password">
        <input type="hidden" name="inv_id" <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
            <% } %>>

        <label for="account_password">New Password:</label>
        <input type="password" id="account_password" name="account_password" required minlength="12"
            pattern="^(?=.*[A-Z])(?=.*\d)(?=.*[^A-Za-z0-9]).{12,}$"
            title="Password must be at least 12 characters, include at least one capital letter, at least one number, and at least one special character.">
        <button type="button" id="togglePassword">Show</button>
        
        <div class="password-hint">
            Important note: By entering a password it will change the current password.
            Password must be at least 12 characters and include:
            <ul>
                <li>1 uppercase letter</li>
                <li>1 lowercase letter</li>
                <li>1 number</li>
                <li>1 special character</li>
            </ul>
        </div>
        <button type="submit">Change Password</button>
    </form>
</section>

<script src="/js/show-logic.js"></script>